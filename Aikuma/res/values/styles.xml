<resources xmlns:android="http://schemas.android.com/apk/res/android">
  
<!-- style for small devices -->
    <style name="MainTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4B7A98</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item> 
    </style>
    <style name="SecondTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#A7C8D9</item>
    </style>
   
    <style name="TextButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#6FA9C8</item>
    </style>
        
    <style name="TextviewMetadata1">
        <item name="android:textSize">25sp</item>
      	<item name="android:textColor">#E53935</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    
    <style name="TextviewMetadata2">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#A7C8D9</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="respeak_remindInfoRecord_TextviewMetadata1">
        <item name="android:textSize">12sp</item>
      	<item name="android:textColor">#E53935</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="respeak_remindInfoRecord_TextviewMetadata2">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#A7C8D9</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="respeak_TextviewMetadata1">
        <item name="android:textSize">15sp</item>
      	<item name="android:textColor">#E53935</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>
    
    <style name="respeak_TextviewMetadata2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#A7C8D9</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="respeak_TextviewMetadata3">
        <item name="android:textColor">#6FA9C8</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">13sp</item>
    </style>

    
    <style name="respeak_TextviewMetadata4">
        <item name="android:layout_width">100dp</item>
	    <item name="android:textColor">#6FA9C8</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">15sp</item>
    </style>
        
    <style name="respeak_TextViewSelectedLang">
        <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:textSize">12sp</item>
    </style>
    
    <style name="TextviewSelectedLanguage">
        <item name="android:textSize">15sp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
    </style>
    
    <style name="ButtonChooseLanguage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    	<item name="android:textSize">10sp</item>
    </style>
    
    <style name="ButtonMoreLanguages">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#388E3C</item>
        <item name="android:textStyle">bold</item>
    	<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginTop">15dp</item>
		<item name="android:layout_marginRight">15dp</item> 
    </style>
    
    <style name="ButtonLessLanguage">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#B71C1C</item>
        <item name="android:textStyle">bold</item>
    	<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginTop">15dp</item>
		<item name="android:layout_marginRight">15dp</item> 
    </style>
    

